<script>
import dictDataApi from '@/api/dictdata-api'
import Session from '@/utils/session-util'
import personnelApi from '@/api/user-api'
import Image2Base64 from "@/components/upload/image2Base64";
import ViewImg from "@/components/view-pic";
import { log } from 'util';
export default {
		name:'personnelinfo-page',
		components: { Image2Base64 ,ViewImg},
    data(){
			var validateCheckMobile = (rule, value, callback) => {
					var reg = /^[1][0-9]{10}$/;
					if (value != null && value != "") {
							if (value.length != 11 || !reg.test(value)) {
									callback(new Error("电话格式不正确"));
									return;
							}
					}
					callback();
			};
			var validateCheckIdCard = (rule, value, callback) => {
				var reg = /^[1-9]\d{5}(18|19|20)\d{2}((0[1-9])|(1[0-2]))(([0-2][1-9])|10|20|30|31)\d{3}[0-9Xx]$/;
				if (value != null && value != "") {
						if (value.length != 18 || !reg.test(value)) {
								callback(new Error("身份证号不正确"));
								return;
						}
				}
				callback();
			};
			return {
				labelPosition: 'left',
				isDisable:false,
				activeName:'first',
				personnelinfoForm:{
					status: "",
					id:'',
					userName: "",//用户名
					name: "",//姓名
					status: "",//状态
					deptName:"",//部门
					roleName:"",//角色
					dataRange:"",//数据范围
					location:"",//职位
					userId:'',//用户ID
					birthday:'',//生日
					nation:'',//民族
					nationLabel:'',
					nativePlace:'',//籍贯
					idCard:'',//身份证号
					marriage:'',//婚姻状态
					marriageLabel:'',
					politics:'',//政治面貌
					politicsLabel:'',
					education:'',//学历
					educationLabel:'',
					academicDegree:'',//学位
					health:'',//健康状况
					healthLabel:'',
					height:0,//身高
					weight:0,//体重
					adress:'',//地址
					homePhone:'',//家庭联系方式
					phone:'',//联系方式
					head:'',//头像
					sex:'',//性别
					sexLabel:'',
				},
				personnelRules: {
					idCard:[
						{
							validator: validateCheckIdCard,
							trigger: "blur"
						}
					],
					weight:[
						{
							type:'number',
							message:'体重必须为数值',
							// trigger: ["blur"]
						}
					],
					height:[
						{
							type:'number',
							message:'身高必须为数值',
							// trigger: ["blur"]
						}
					],
					phone: [
						{
							validator: validateCheckMobile,
							trigger: "blur"
						}
					],
					homePhone:[
						{
						
							validator: validateCheckMobile,
							trigger: "blur"
						}
					]
				},
				sexOptions:[],//性别列表
				nationOptions:[],//民族列表
				politicsOptions:[],//政治面貌
				marriageOptions:[],//婚姻状态
				educationOptions:[],//学历
				academicDegreeOptions:[],//学位
				healthOptions:[],//健康状态列表
				preventSecondarySubmit: false, // 阻止二次提交
      }
    },
    created(){
			const{id,type} = this.$route.query
			this.personnelinfoForm.userId = id
			if(id){
				this.getPersonnelInfo(id)	
				if(type == 'view'){
					this.isDisable = true
				}
				if(type == 'edit'){
					Promise.all([this.getAllNation(),this.getAllSex(),this.getAllMarriage(),this.getAllEducation(),this.getAllAcademicDegree(),this.getAllHealth(),this.getAllPolitics()])
				}
					
			}
		},
		methods:{
			// 获取用户基本资料
			getPersonnelInfo(userId){
				personnelApi.getUserDetailInfo({userId}).then(res =>{
					let data = res.data.data
					this.personnelinfoForm = data
				}).catch(res =>{
					console.log(res);
				})
			},
			delImg(val){
				this.personnelinfoForm.head = val
			},
			//保存
			saveSubmit(form_name){
				const{type} = this.$route.query
				var that = this;
				if(this.preventSecondarySubmit) return
				this.preventSecondarySubmit = true
				this.$refs[form_name].validate(valid => {
					if(valid){
						const {id,userId,birthday,nation,nativePlace,idCard,marriage,politics,education,academicDegree,health,height,weight,adress,homePhone,phone,head,sex} = this.personnelinfoForm
						console.log(head);
						personnelApi.saveUserDetailInfo({id,userId,birthday,nation,nativePlace,idCard,marriage,politics,education,academicDegree,health,height,weight,adress,homePhone,phone,head,sex}).then(res=>{
								if (res.data.success) {
												that.$notify({
														title: "成功",
														message: "保存成功",
														type: "success",
														duration: 500,
														onClose(){
																that.$router.go(-1)	
																that.preventSecondarySubmit =  false
														}
												});
									} else {
											that.$notify({
													title: "保存失败",
													message: res.data.msg,
													type: "warning",
													duration: 2000
											});
											that.preventSecondarySubmit = false
									}
						}).catch(res=>{
								console.log(res);
						})
					}else {
						console.log("error submit!!");
						this.preventSecondarySubmit = false
						return false;
					}
				})
			},
			/* 获取头像图片 */
			getHeadImgStr(imgUrl) {
					this.$set(this.personnelinfoForm, 'head', imgUrl)
					console.log(imgUrl);
			},
			//取消按钮 返回
			cancel(){
				this.$router.go(-1)	
			},
			//民族列表
			getAllNation() {
					dictDataApi.queryByModel({type: 'nation_type'}).then(res=>{
							this.nationOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
			//性别列表
			getAllSex() {
					dictDataApi.queryByModel({type: 'sex_type'}).then(res=>{
							this.sexOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
			// 婚姻状态
			getAllMarriage(){
					dictDataApi.queryByModel({type:'marriage_type'}).then(res=>{
							this.marriageOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
			//学历状态
			getAllEducation(){
					dictDataApi.queryByModel({type:'education_type'}).then(res=>{
							this.educationOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
			//学位状态
			getAllAcademicDegree(){
					dictDataApi.queryByModel({type:'academic_type'}).then(res=>{
							this.academicDegreeOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
			// 健康状态
			getAllHealth(){
					dictDataApi.queryByModel({type:'health_type'}).then(res=>{
						this.healthOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
			// 政治面貌
			getAllPolitics(){
					dictDataApi.queryByModel({type:'politics_type'}).then(res=>{
							this.politicsOptions = res.data.data;
					}).catch(function (res) {
							console.log(res);
					});
			},
		}
}
</script>

