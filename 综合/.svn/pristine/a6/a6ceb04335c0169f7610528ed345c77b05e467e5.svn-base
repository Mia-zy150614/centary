                time:[],
                startSalesPrice:'',  //销售价start
                endSalesPrice:'',  //销售价end
                tenderParams:'', //投标参数
                bidsParams:'' ,  //招标参数
                // names:''
            },
            allgoodsSearchRules: {},
            discount: '', // 打折
            allowance: '', // 优惠价格
            totalsalesPrice: 0, // 销售总价
            showTotalsalesPrice: 0, // 显示的报价
            totalcostPrice: 0, // 成本总价
            qgoodsList: [], // 报价单货物列表
            cacheId: null,
            profitGrade: [], // 利润率等级列表
            profitGradeNumber: null, // 利润率等级数
            showTotalsalesPriceColor: '', // 报价颜色
        }
    },
    components: { MoreSerach},
    created(){
        const { cacheId, type } = this.$route.query
        this.cacheId = cacheId
        /* 提示操作手册 是否提示 */
        this.operationmanual()
        this.queryByTypes()

        this.getCacheGoodsList() // 获取缓存的货物
    },
    beforeRouteLeave(to,from, next) {
        if(this.qgoodsList.length) {
            this.$confirm('有信息未保存确定要离开吗, 是否继续?', '提示', {
                confirmButtonText: '确定',
                cancelButtonText: '取消',
                type: 'warning'
            }).then( async () => {
                next()
            }).catch(err => console.warn(err));
        } else {
            next()
        }
    },
    beforeDestroy() {
        this.clearCacheGoods()
    },
    watch: {
        'allgoodsSearch': {
            handler(item) {
                this.isHighSearch = validateIsHighSearch(item, 'goodsName')
            },
            deep: true
        }
    },
    methods:{
        /* 生成报价单 */
        async createQuotation() {
            if(!this.qgoodsList.length) {
                this.$notify({
                    title: "错误",
                    message: '请先添加需要报价的货物',
                    type: "error",
                    duration: 2000,
                });
                return
            }
            const numberError = this.qgoodsList.filter(item => {
                return !/^\d+$/.test(item.number) || item === 0
            })
            if(numberError.length) {
                this.$notify({
                    title: "货物数量错误",
                    message: '货物数量输入有误',
                    type: "error",
                    duration: 2000,
                });
                return
            }
            if(!this.name) {
                this.$notify({
                    title: "报检单名称错误",
                    message: '报检单名称不能为空',
                    type: "error",
                    duration: 2000,
                });
                return
            }
            const pass = this.computeDiscount()
            if(!pass) {
                this.$confirm('报价利润过低，确定要生成报价单吗, 是否继续?', '风险预警', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(() => {
                    this.save()
                }).catch(() => {});
            } else {
                this.$confirm('确定生成报价单, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(() => {
                    this.save()
                }).catch(() => {});
            }
        },
        /* 保存报价单信息 */
        save(){
            const _this = this;
            const quotatGoodslist = this.qgoodsList.map(item => ({goodsId: item.goodsId, number: item.number}))
            const params = {
                name: this.name, 
                totalPrice: this.showTotalsalesPrice, 
                profitMargin: this.profitGradeNumber, 
                discount:this.discount, 
                allowance:this.allowance, 
                goodsString: JSON.stringify(quotatGoodslist)
            }
            quotationApi.save(params).then(res => {
                this.$notify({
                    title: "成功",
                    message: "报检单生成成功",
                    type: "success",
                    duration: 1000,
                    onClose() {
                        _this.qgoodsList = []
                        _this.$router.push({name: 'quotation-page'})
                    }
                });
            }).catch(err => console.warn(err))
        },
        getName(data){
            if(data === false){
                this.outerVisible = data
            }else{
                // this.allgoodsSearch.names = data
                console.log(data);
                this.outerVisible = false
            }
            // console.log(data);
        },
        // 获取所有货物列表
        allgetGoodsList(){
            goodsApi.noPageList({...this.allgoodsSearch, cacheId: this.cacheId}).then(res => {
                const data = res.data.data
                if(data) this.goodsList = data
            }).catch( err => console.warn(err))
        },
        /* 所有货物列表选择 */
        allGoodsSelectionChange(row) {
            this.allGoodsmultipleSelection = row
        },
        /* 报检单造作手册 */
        operationmanual() {
            const isshow = localStorage.getItem('quotation-operation')
            if(isshow) return
            const h = this.$createElement;
            this.$msgbox({
                title: '操作指引',
                message: h('div', {style: 'font-size: 12px'}, [
                    h('p', null, [
                        h('span', null, '第一步：'),
                        h('i', { style: 'color: red' }, '点击添加货物')
                    ]),
                    h('p', null, [
                        h('span', null, '第二步：'),
                        h('i', { style: 'color: red' }, '选中需要的货物，添加到报价单')
                    ]),
                    h('p', null, [
                        h('span', null, '第三步：'),
                        h('i', { style: 'color: red' }, '调整总价')
                    ]),
                    h('p', null, [
                        h('span', null, '第四步：'),
                        h('i', { style: 'color: red' }, '生成报价单或插入合同')
                    ])
                ]),
                showCancelButton: true,
                confirmButtonText: '确定',
                cancelButtonText: '不再提示',
            }).then(action => {}).catch(err => {
                localStorage.setItem('quotation-operation', true)
            });
        },
        /* 选中货的货物添加到报价单 */
        async saveToQuotation() {
            const list = [...this.allGoodsmultipleSelection]
            if(!list.length) {
                this.$notify({
                    title: "错误",
                    message: "请先选中添加的货物",
                    type: "error",
                    duration: 2000
                });
                return
            }
            this.isAdd = false
            /* 过滤出选中货物的id */
            const {data: {success}} = await this.saveCacheGoodsList(list)
            if(success) {
                this.getCacheGoodsList()
            } else {
                this.$notify({
                    title: "错误",
                    message: "货物添加到报价单失败",
                    type: "error",
                    duration: 2000
                });
            }
        },
        /* 报价单中取消货物 */
        async del(row) {
            const { id } = row;
            await goodscacheApi.delByIds({ids: id})
            this.getCacheGoodsList()
        },
        computeTotalPrice(goodsList) {
            /* 计算总价 */
            this.totalsalesPrice = 0; // 
            this.totalcostPrice = 0; // 
            goodsList.forEach(item => {
                if(/^\d+$/.test(item.number)) {
                    this.totalsalesPrice += (item.salesPrice*item.number) // 销售价
                    this.totalcostPrice += (item.costPrice*item.number) // 成本价
                }
            })
            this.showTotalsalesPrice = this.totalsalesPrice
            this.computeDiscount()
        },
        /* 去货物列表添加货物 */
        addGoodsBtnClick() {
            this.allgetGoodsList()
            this.isAdd = true
        },
        /* 根据cacheId查询是否有缓存的报价货物 */
        getCacheGoodsList() {
            goodscacheApi.getList({cacheId: this.cacheId}).then(res  => {
                const data = res.data.data
                if(data) this.qgoodsList = data.map(item => ({...item, number: 1}))
                this.computeTotalPrice(this.qgoodsList)
            }).catch(err => console.warn(err))
        },
        /* 缓存当前报价单中的货物 */
        saveCacheGoodsList(goodslist) {
            const ids = goodslist.map(item => item.id)
            return goodscacheApi.save({cacheId: this.cacheId, goodsIds: ids.join(',')})
        },
        /* 清除cacheId下所有的缓存货物 */
        clearCacheGoods(cb) {
            if(cb) {
                this.$confirm('确定清空报检单中所有货物, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then( async () => {
                    await goodscacheApi.delByCacheId({cacheId: this.cacheId})
                    this.getCacheGoodsList()
                    this.showTotalsalesPriceColor = ''
                    this.discount = ''
                    this.allowance = ''
                }).catch(err => console.warn(err));
            } else {
                goodscacheApi.delByCacheId({cacheId: this.cacheId})
            }
        },
        /* 返回报价单 */
        backQuotation() {
            this.isAdd = false
            this.getCacheGoodsList()
        },
        /* 计算折扣 利润率*/
        computeDiscount() {
            let flag = true
            /* 
                this.totalsalesPrice 销售价
                this.totalcostPrice  成本价
                this.discount // 打折
                this.allowance, // 优惠价格
                颜色： 1 绿色 ，2 黄色， 3 橙色， 4红色， 5黑红色
                利润率 = (销售价 - 成本价) / 成本价 * 100%
            */
           if(!this.totalcostPrice) {
               this.showTotalsalesPriceColor = ''
               return
           }
           let profit, actualprice; // 利润率 
            if(this.discount && this.allowance) {
                /* 打折加有优惠 */
                actualprice = this.totalsalesPrice * parseFloat(this.discount) / 10 - parseFloat(this.allowance)
                profit = (actualprice - this.totalcostPrice) / this.totalcostPrice
            } else if(this.discount) {
                /* 只打折 */
                actualprice = this.totalsalesPrice * parseFloat(this.discount) / 10
                profit = (actualprice - this.totalcostPrice) / this.totalcostPrice
            } else if(this.allowance) {
                /* 只优惠 */
                actualprice = this.totalsalesPrice - parseFloat(this.allowance)
                profit = (actualprice - this.totalcostPrice) / this.totalcostPrice
            } else {
                actualprice = this.totalsalesPrice
                profit = (actualprice - this.totalcostPrice) / this.totalcostPrice
            }
            this.showTotalsalesPrice = actualprice.toFixed(2)
            if(profit && profit > 0) {
                const profitGrade = this.profitGrade.filter(item => (profit > parseFloat(item.value))).map(item => item.orderNum)
                this.profitGradeNumber = profitGrade[0]
                switch(this.profitGradeNumber) {
                    case 1:
                        flag = true
                        this.showTotalsalesPriceColor = '#05c70c'
                        break;
                    case 2:
                        flag = true
                        this.showTotalsalesPriceColor = '#ffa500'
                        break;
                    case 3:
                        flag = true
                        this.showTotalsalesPriceColor = '#ff8d00'
                        break;
                    case 4:
                        flag = false
                        this.showTotalsalesPriceColor = '#ff2f00'
                        break;
                    case 5:
                        flag = false
                        this.showTotalsalesPriceColor = '#8c1e05'
                        break;
                }
            } else if(profit <= 0) {
                flag = false
                this.showTotalsalesPriceColor = '#8c1e05'
                this.profitGradeNumber = 5
            } else {
                flag = false
                this.profitGradeNumber = 5
                this.showTotalsalesPriceColor = ''
            }
            return flag
        },
        /* 货物数量修改 */
        goodsNumber(e) {
            this.computeTotalPrice(this.qgoodsList)
        },
        /* 打折改变时 */
        discountChange(e) {
            const _this = this;
            return new Promise(resolve => {
                lodashUtil(() => {
                    if(/^[0-9]+$/.test(e) || /^[0-9]+\.?[0-9]+?$/.test(e) && e) {
                        if(parseFloat(e) >= 1 && parseFloat(e) <= 10) {
                            _this.computeDiscount()
                            resolve(true)
                        } else {
                            _this.$notify({
                                title: "打折数错误",
                                message: '请输入合理的打折数: 1~10',
                                type: "error",
                                duration: 2000,
                            })
                            resolve(false)
                        }
                    } else {
                        _this.discount = ''
                        _this.computeDiscount()
                        resolve(true)
                    }
                }, 500)
            })
        },
        /* 优惠价改变 */
        allowanceChange(e) {
            const _this = this;
            return new Promise(resolve => {
                lodashUtil(() => {
                    if(/^[0-9]+$/.test(e) || /^[0-9]+\.?[0-9]+?$/.test(e) && e) {
                        if(parseFloat(e) > this.totalsalesPrice) {
                            this.$notify({
                                title: "优惠价错误",
                                message: '优惠价不能大于销售总价',
                                type: "error",
                                duration: 2000,
                            })
                            resolve(false)
                        } else {
                            this.computeDiscount()
                            resolve(true)
                        }
                    } else {
                        _this.allowance = ''
                        _this.computeDiscount()
                        resolve(true)
                    }
                }, 500)
            })
        },
        /* 利润率数据字典 */
        queryByTypes() {
            dictdataApi.queryByModel({type: 'profit_margin'}).then(res => {
                const data = res.data.data;
                if(data) this.profitGrade = data
            }).catch(err => console.log(err))
        },
        /* 返回至报价管理 */
        back() {
            this.$router.push({name: 'quotation-page'})
        }
    }
}
</script>
