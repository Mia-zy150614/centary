<script>
import goodsApi from "@/api/goods-api";
import Image2Base64 from "@/components/upload/image2Base64";
export default {
    name: 'goods-info-page',
    data() {
        return {
            infoForm: {
                bigType: '', // 大类类型
                name: '', // 货物名称
                firm: '', // 厂商
                brand: '', // 品牌
                type: '', // 型号
                design: '', // 款式
                costPrice: '', // 成本价
                salesPrice: '', // 销售价
                contactPerson: '', // 联系人
                unit: '', // 单位
                enterTime: '', // 录入时间
                phone: '', // 联系电话
                goodsImgStr: '', // 货物图片
                productImgStr: '', // 产品信息
                tenderParams: '', // 投标参数
                bidsParams: '', // 找标参数
                remark: '', // 备注
            },
            formRules: {
                bigType: { required: true, message: '必填', trigger: 'blur' }, // 大类类型
                name: { required: true, message: '必填', trigger: 'blur' }, // 货物名称
                firm: { required: true, message: '必填', trigger: 'blur' }, // 厂商
                brand: { required: true, message: '必填', trigger: 'blur' }, // 品牌
                type: { required: true, message: '必填', trigger: 'blur' }, // 型号
                design: { required: true, message: '必填', trigger: 'blur' }, // 款式
                costPrice: { required: true, message: '必填', trigger: 'blur' }, // 成本价
                salesPrice: { required: true, message: '必填', trigger: 'blur' }, // 销售价
                contactPerson: { required: true, message: '必填', trigger: 'blur' }, // 联系人
                phone: { required: true, message: '必填', trigger: 'blur' }, // 联系电话
                unit: { required: true, message: '必填', trigger: 'blur' }, // 单位
                enterTime: { required: true, message: '必填', trigger: 'blur' }, // 录入时间
                goodsImgStr: { required: true, message: '必填', trigger: 'blur' }, // 图片
                productImgStr: { required: true, message: '必填', trigger: 'blur' }, // 产品资料
                tenderParams: { required: true, message: '必填', trigger: 'blur' }, // 投标参数
                bidsParams: { required: true, message: '必填', trigger: 'blur' }, // 招标参数
                remark: '', // 备注
            }
        }
    },
    components: { Image2Base64 },
    created(){
        const {id, type} = this.$route.query;
        if( type && id) {
            this.edit(id);
        }
    },
    methods: {
        edit(id){
            goodsApi.getById({ id }).then( res => {
                const data =  res.data.data
                if(data) this.infoForm = res.data.data
            }).catch(err => console.warn(err));
        },
        /* 货物信息保存 */
        submitSave(form_name) {
            const _this = this
            this.$refs[form_name].validate(valid => {
                if(valid) {
                    goodsApi.save(this.infoForm).then(res =>{
                        if (res.data.success) {
                            this.$notify({
                                title: "成功",
                                message: "保存成功",
                                type: "success",
                                duration: 1500,
                                onClose(){
                                    _this.$router.push({ name: "goods-page" });
                                }
                            });
                        } else {
                            this.$notify({
                                title: "保存失败",
                                message: res.data.msg,
                                type: "warning",
                                duration: 1500
                            });
                        }
                    })
                } else {
                    this.$notify({
                        title: '错误',
                        type: 'error',
                        message: "请填写完整货物信息",
                        duration: 1000
                    })
                }
            })
        },
        /* 重置表单 */
        resset(form_name) {
            const values = Object.values(this.infoForm) // 判断 是否铁血了数据
            const pass = values.find(item => item !== '')
            if(pass) {
                this.$confirm('重置表单会导致信息丢失, 是否继续?', '提示', {
                    confirmButtonText: '确定',
                    cancelButtonText: '取消',
                    type: 'warning'
                }).then(() => {
                    this.$refs[form_name].resetFields();
                    /* 手动重置 el-form 重置失效 */
                    this.infoForm.goodsImgStr = ''
                    this.infoForm.productImgStr = ''
                }).catch(err => console.warn(err));
            } else {
                this.$refs[form_name].resetFields();
            }
        },
        /* 取消返回 */
        cancel() {
            this.$router.push({name: 'goods-page'})
        },
        /* 获取货物图片 */
        getGoodsImgStr(imgUrl) {
            this.$set(this.infoForm, 'goodsImgStr', imgUrl)
        },
        /* 获取货物产品图片 */
        getProductImgStr(imgUrl) {
            this.$set(this.infoForm, 'productImgStr', imgUrl)
        }
    }
}
</script>
